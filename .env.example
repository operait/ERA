# Logging level: verbose (full logs), minimal (only disagreements), off (no logs)
INTENT_DETECTION_LOGGING=verbose

# LLM timeout in milliseconds (default: 3000ms)
INTENT_DETECTION_TIMEOUT=3000

# Fallback strategy: keyword (use keyword detection on LLM failure), none (don't trigger on LLM failure)
INTENT_DETECTION_FALLBACK=keyword